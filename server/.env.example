# Backend Environment Variables
# Copy this to .env and fill in your production values

# Database URL (PostgreSQL)
# Format: postgresql://username:password@host:port/database
# Get this from your Render PostgreSQL database
DATABASE_URL=postgresql://user:password@localhost:5432/kisansaathi

# FastAPI URL (Python ML service)
# Local: http://localhost:8000
# Production: https://your-fastapi-name.onrender.com
FASTAPI_URL=http://localhost:8000

# Node Environment
NODE_ENV=production

# Server Port (Render uses PORT from environment)
PORT=5000

# Frontend URL (for CORS)
# Local: http://localhost:3000
# Production: https://your-app-name.vercel.app
FRONTEND_URL=http://localhost:3000
